<%- include("partials/header.ejs") %>

<h1 class="my-5 display-1"><%= updateMode ? 'Update' : 'Create' %> Post</h1>

<form action="<%= updateMode ? '/update' : '/create' %>" method="POST">
  <% if (updateMode) { %>
    <input type="hidden" value="<%= post.id %>" name="id" />
  <% } %>
  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="<%= updateMode ? post.title : 'Title' %>" name="title">
  </div>
  <div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="<%= updateMode ? post.author : 'Author' %>" name="author">
  </div>
  <div class="input-group mb-3">
    <textarea class="form-control" placeholder="<%= updateMode ? post.body : 'Body' %>" name="body"></textarea>
  </div>
  <div class="d-flex justify-content-center">
    <a href="/" class="btn btn-danger me-2">Go Back</a>
    <button class="btn btn-primary" type="submit">Submit Post</button>
  </div>
</form>

<%- include("partials/footer.ejs") %>
